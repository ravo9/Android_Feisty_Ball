<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ozog.development.feistyball.windows.IntroductionScreen">

    <FrameLayout
        android:id="@+id/windowLevelComplited"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/inter_level_menu_bg"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:text="How to play"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Use your hands to balance the smartphone and control the ball!"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="169dp"
            android:layout_height="80dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:textAlignment="center"
            android:src="@drawable/phone_ballance_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Switch on all propellers and then achieve the destination point."
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/propeller" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="165dp"
            android:src="@drawable/destination02" />

        <Button
            android:id="@+id/btnOk"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:onClick="openNewGame"
            android:text="OK"
            android:textColor="@android:color/background_light"
            tools:backgroundTint="#8bfe85" />




    </FrameLayout>

    <TextView
        android:id="@+id/levelTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gameTimer"
        android:layout_alignEnd="@+id/gameTimer"
        android:layout_marginBottom="23dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Level: 00:00:00"
        android:textAllCaps="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/gameTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Game: 00:00:00"
        android:textAllCaps="false"
        android:visibility="visible" />


</RelativeLayout>
