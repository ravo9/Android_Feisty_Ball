<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ozog.development.feistyball.MainGame">

    <ImageView
        android:id="@+id/destination"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_above="@+id/ball"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/destination" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_above="@+id/btnNewGame"
        android:layout_alignEnd="@+id/btnNewGame"
        android:layout_marginBottom="74dp"
        app:srcCompat="@drawable/ball"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="224dp" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:onClick="newGame"
        android:text="New Game"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="470dp" />

    <FrameLayout
        android:id="@+id/windowLevelComplited"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorAccent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Level completed!"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Level time: 00:00:00"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Total time: 00:00:00"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnNextLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Next level" />

        <Button
            android:id="@+id/btnRestartLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:onClick="restartLevel"
            android:text="Button" />
    </FrameLayout>


</RelativeLayout>
