<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ozog.development.feistyball.MainGame">

    <ImageView
        android:id="@+id/destination"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnNewGame"
        android:visibility="invisible"
        app:srcCompat="@drawable/destination" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_above="@+id/btnNewGame"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ball" />

    <Button
        android:id="@+id/btnNewGame"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="340dp"
        android:onClick="loadNextLevel"
        android:text="New Game" />

    <FrameLayout
        android:id="@+id/windowLevelComplited"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/inter_level_menu_bg"
        android:visibility="invisible">

        <TextView
            android:id="@+id/finalTotalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Total time: 00:00:00"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnRestartLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="245dp"
            android:onClick="restartLevel"
            android:text="Restart Level" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:text="Main Menu" />

        <TextView
            android:id="@+id/finalLevelTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:text="Level time: 00:00:00"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnNextLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnNewGame"
            android:layout_alignStart="@+id/windowLevelComplited"
            android:layout_marginTop="195dp"
            android:onClick="loadNextLevel"
            android:text="Next level" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Level completed!"
            android:textAlignment="center"
            android:textSize="24sp" />

    </FrameLayout>

    <Button
        android:id="@+id/btnScores"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNewGame"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="openBestScores"
        android:text="Best scores"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/levelTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnScores"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:text="Level time: 00:00:00"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/gameTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/levelTimer"
        android:layout_below="@+id/levelTimer"
        android:layout_marginTop="15dp"
        android:text="Game time: 00:00:00"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/blackHoleB"
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/black_hole" />

    <ImageView
        android:id="@+id/blackHoleA"
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/blackHoleB"
        android:visibility="invisible"
        app:srcCompat="@drawable/black_hole" />

    <ImageView
        android:id="@+id/bonus01"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/destination"
        android:visibility="invisible"
        app:srcCompat="@drawable/bonus_6_sec_02" />

    <Button
        android:id="@+id/btnAbout"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScores"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="openApplicationWebsite"
        android:text="About"
        android:textColor="@android:color/white"
        android:textColorLink="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/destinationIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:srcCompat="@drawable/destination02" />

    <ImageView
        android:id="@+id/ballIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bonus01"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/destination"
        android:visibility="invisible"
        app:srcCompat="@drawable/black_ball" />


</RelativeLayout>
